// 3. bScroller
(function( $ ){

	$.bScroller = function(element, options) {

		var defaults = {
			'shutterSpeed': 1000,
			'changeSpeed': 5000,
			'buffer': 2,
			'autoPlay': false,
			'pageSize': 1,
			'moveBy': false,
			'dotnav': false
		};
		
		var plugin = this;
		
		plugin.settings = {};
		
		var $element = $(element),
			element = element;
			
		plugin.init = function() {
            plugin.settings = $.extend({}, defaults, options);
			
			var $scrollObj = $element;//$(this);
			//var singleWidth = $scrollObj.parent().width();
			var singleWidth = $scrollObj.contents('.slide').filter(":visible").eq(0).outerWidth()+(parseInt($scrollObj.contents('.slide').filter(":visible").eq(0).css('margin-left'))*2);
			var updater = null;
			var originalElements = $scrollObj.contents('.slide').size();
			var elements = originalElements;
			
			// Set Some Properties
			if(plugin.settings.moveBy == false) { plugin.settings.moveBy = plugin.settings.pageSize; }
			$scrollObj.contents('.slide').css('float', 'left');
			$scrollObj.css('position', 'absolute');
			if(plugin.settings.dotnav == true) {
				$scrollObj.parent().append('<ul class="dotnav"></ul>');
			}
			
			plugin.resetScroll = function() {
				$scrollObj.contents('.slide').slice(originalElements).remove();
				$scrollObj.parent().children('.dotnav').empty();
				var lowIndex = 99999; // We're trying to find the lowest indexed (i.e. newest) visible element. Start high for comparisons.
				var lowPos = 0;
				var countVisi = 0;
				$scrollObj.contents('.slide').each(function(index) {
					if($(this).css('display') != 'none') { // Filtering before the each seems to mess up ordering, hence doing it this way
						if(parseInt($(this).attr('data-order')) < lowIndex) { lowIndex = $(this).attr('data-order'); lowPos = countVisi; }
						countVisi++;
					}
				});
				$scrollObj.css('left','-'+(singleWidth*lowPos)+'px');
				plugin.pad();
				checkScroll();
			}
			
			plugin.updateDotnav = function() {
				var leftSlide = -$scrollObj.position().left/singleWidth;
				var dotsStart = parseInt($scrollObj.contents('.slide').filter(":visible").eq(leftSlide).attr('rel'));
				var dots = $scrollObj.parent().find('.dotnav li').length;
				$scrollObj.parent().find('.dotnav li').removeClass('on');
				for(i=dotsStart; i<dotsStart+plugin.settings.pageSize; i++) {
					$scrollObj.parent().find('.dotnav li').eq(i%dots).addClass('on');
				}
			}
			
			plugin.pad = function() {
				var visibleCount = $scrollObj.contents('.slide').filter(":visible").size();
				// Add numbers to slides
				$scrollObj.contents('.slide').filter(":visible").each(function(index) { $(this).attr('rel',index); });
				if(visibleCount <= plugin.settings.pageSize*5 && visibleCount > 0) {
					multiplyBy = Math.ceil((plugin.settings.pageSize*5) / (visibleCount));
					tmp = $.trim($scrollObj.html());
					$scrollObj.empty();
					$scrollObj.html(new Array(multiplyBy+1).join(tmp));
				}
				// Is there any point showing the arrers and dots?
				if(visibleCount<=plugin.settings.pageSize) {
					$scrollObj.parent().parent().find('.arrow.left, .arrow.right, .dotnav').hide();
				}
				else {
					$scrollObj.parent().parent().find('.arrow.left, .arrow.right, .dotnav').show();
				}
				$scrollObj.parent().children('.dotnav').html(new Array(visibleCount+1).join('<li></li>')); // Do dotnav
				elements = $scrollObj.contents('.slide').filter(":visible").size();
				$scrollObj.css('width',singleWidth * elements + 'px');
			}
			
			plugin.pad();
		
			var moveBy = function(mb) {
				if($scrollObj.is(":animated")) return;
				$scrollObj.animate({ left: mb }, { duration: plugin.settings.shutterSpeed, complete: function() { checkScroll(); } });
			};
		
			var next = function() { moveBy('+='+(singleWidth*plugin.settings.moveBy)); };
			var prev = function() { moveBy('-='+(singleWidth*plugin.settings.moveBy)); };
			
			var interacted = false;
			$scrollObj.parent().parent().find('.right').click( function() { clearInterval(updater); prev(); interacted=true; return false; } );
			$scrollObj.parent().parent().find('.left').click( function() { clearInterval(updater); next(); interacted=true; return false; } );
			
			if(plugin.settings.autoPlay) {
				autoplay();
				// Pause on hover
				$scrollObj.hover(function(){
					clearInterval(updater);
				},function(){
					if(interacted==false){
						autoplay();
					}
				});
			}
			
			var checkScroll = function() {
				while($scrollObj.position().left >= -(singleWidth*plugin.settings.pageSize*2)) {
					if($scrollObj.children(':last').is(':visible')) {
						$scrollObj.css('left', ($scrollObj.position().left - singleWidth) + 'px');
					}
					$scrollObj.children(':last').detach().prependTo($scrollObj);
				}
				while($scrollObj.position().left <= -(singleWidth * (elements-(3*plugin.settings.pageSize)))) {
					if($scrollObj.children(':first').is(':visible')) {
						$scrollObj.css('left', ($scrollObj.position().left + singleWidth) + 'px');
					}
					$scrollObj.children(':first').detach().appendTo($scrollObj);
				}
				// Round value For IE8
				$scrollObj.css('left', (Math.round($scrollObj.position().left / singleWidth) * singleWidth)+'px');
				if(plugin.settings.dotnav) { plugin.updateDotnav(); }
			}
			checkScroll();
			
			function autoplay() {
				updater = setInterval(function() { prev(); }, plugin.settings.changeSpeed);
			};
			
		};
		plugin.init();
	};
	
	$.fn.bScroller = function(options) {
        return this.each(function() {
            if (undefined == $(this).data('bScroller')) {
                var plugin = new $.bScroller(this, options);
                $(this).data('bScroller', plugin);
            }
        });

    }
})(jQuery);
